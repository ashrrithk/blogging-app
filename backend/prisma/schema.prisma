generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  userName  String? @unique
  password  String
  blogs     Blogs[]
}

model Blogs {
  id        Int     @id @default(autoincrement())
  authorId  Int
  title     String
  content   String
  thumbnail String
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
}
